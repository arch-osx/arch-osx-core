pkgname=expat
pkgver=2.1.1
pkgrel=1
pkgdesc='An XML parser library'
arch=('x86_64')
url='http://expat.sourceforge.net/'
license=('custom')
depends=('libc')
source=(http://downloads.sourceforge.net/sourceforge/expat/$pkgname-$pkgver.tar.bz2)
md5sums=('7380a64a8e3a9d66a9887b01d0d7ea81')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/opt/arch
  make
}

check() {
  make -C $pkgname-$pkgver check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
  install -dm755 "$pkgdir"/opt/arch/share/licenses/$pkgname
  install -m644 COPYING "$pkgdir"/opt/arch/share/licenses/$pkgname/COPYING
}
